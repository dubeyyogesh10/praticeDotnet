@page
@model Taste.Pages.Admin.Category.CategoryModel
@{
    ViewData["Title"] = "Category";
}

<div class="container border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6">
            <a asp-page="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                &nbsp; Create New
            </a>
        </div>
    </div>
    <br/><br/>
    <table class="table-bordered table-striped table" id="DT_load" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>

    </table>
</div>

@section Scripts{
    <script src="~/js/category.js"></script>

}
